<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="15dp"
            android:text="@string/list_itemName"
            android:textColor="#477971"
            android:textSize="20sp"></TextView>

        <TextView
            android:id="@+id/item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="50dp"
            android:hint="Item Price"
            android:text="@string/list_itemPrice"
            android:textColor="#000000"
            android:textSize="15sp"></TextView>

        <TextView
            android:id="@+id/item_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="80dp"
            android:text="@string/list_itemCat"
            android:textColor="#000000"
            android:textSize="15sp"></TextView>

        <TextView
            android:id="@+id/item_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="110dp"
            android:text="@string/list_itemDesc"
            android:textColor="#000000"
            android:textSize="15sp"></TextView>

        <TextView
            android:id="@+id/item_offers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="140dp"
            android:text="@string/list_itemOffers"
            android:textColor="#000000"
            android:textSize="15sp"></TextView>

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="200dp"
            android:layout_height="180dp"
            android:layout_marginLeft="15dp"
            app:srcCompat="@drawable/girl" />
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>