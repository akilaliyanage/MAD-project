<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/containedButton4"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:backgroundTint="#000000"
        android:text="@string/category1"
        android:textColor="#FFFF"
        android:textStyle="bold"
        app:cornerRadius="15dp"
        app:icon="@drawable/arrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.597" />

    <Button
        android:id="@+id/containedButton1"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:backgroundTint="#000000"
        android:text="@string/category2"
        android:textColor="#FFFF"
        android:textStyle="bold"
        app:cornerRadius="15dp"
        app:icon="@drawable/arrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.701" />

    <Button
        android:id="@+id/containedButton3"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:backgroundTint="#000000"
        android:text="@string/category4"
        android:textColor="#FFFF"
        android:textStyle="bold"
        app:cornerRadius="15dp"
        app:icon="@drawable/arrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.919" />

    <Button
        android:id="@+id/containedButton2"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:backgroundTint="#000000"
        android:text="@string/category3"
        android:textColor="#FFFF"
        android:textStyle="bold"
        app:cornerRadius="15dp"
        app:icon="@drawable/arrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.816" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="374dp"
        android:layout_height="339dp"
        android:backgroundTint="#206a5d"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.093">


        <TextView
            android:id="@+id/textView5"
            android:layout_width="209dp"
            android:layout_height="130dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="50dp"
            android:text="@string/landingPageText1"
            android:textColor="#FFFF"
            android:textSize="23dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="176dp"
            android:layout_height="119dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="180dp"
            android:text="@string/landingPageText2"
            android:textColor="#FFFF"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="167dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="212dp"
            app:srcCompat="@drawable/img2" />


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>